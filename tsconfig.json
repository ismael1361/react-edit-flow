{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationDir": "types",
        "emitDeclarationOnly": true,
        "jsx": "react",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "dom",
            "es2015",
            "es2017"
        ],
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}